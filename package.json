{
  "name": "arcomage-hd",
  "version": "1.3.10",
  "description": "Web-based free and open source HD clone of 3DO and NWC's 2000 card game Arcomage",
  "repository": {
    "type": "git",
    "url": "https://github.com/arcomage/arcomage-hd.git"
  },
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "start": "webpack serve --mode development",
    "build": "rimraf dist && webpack --mode production",
    "build:local": "rimraf dist && webpack --env NODE_ENV2=local --mode production && http-server dist",
    "test": "jest --coverage",
    "tool:ts": "ts-node --project ./tools/tsconfig.json",
    "tool:zhconvert": "yarn tool:ts ./tools/zhconvert",
    "tool:imgpc": "yarn tool:ts ./tools/img-processing/crop && yarn tool:ts ./tools/img-processing/upscale",
    "tool:imgmin": "node --loader ts-node/esm ./tools/img-min/index.ts",
    "tool:datapc": "yarn tool:ts ./tools/data-processing/docards",
    "tool:taverns": "yarn tool:ts ./tools/data-processing/taverns",
    "tool:geticelist": "yarn tool:ts ./tools/geticelist",
    "tool:manifest": "yarn tool:ts ./tools/manifest",
    "tool:ocr:pre": "yarn tool:ts ./tools/ocr/crop && yarn tool:ts ./tools/ocr/composite",
    "tool:ocr": "yarn tool:ts ./tools/ocr/ocr",
    "tool:i18ncheck:card": "yarn tool:ts ./tools/i18ncheck/card",
    "tool:i18ncheck:main": "yarn tool:ts ./tools/i18ncheck/main",
    "tool:calcscore": "yarn tool:ts ./tools/ai-related/calcscore",
    "tool:cardbalance": "yarn tool:ts ./tools/card-balance",
    "tool:i18nextract": "yarn tool:ts ./tools/i18n-extraction",
    "tool:i18njs2text": "yarn tool:ts ./tools/i18n-js2text/js2text",
    "tool:i18ntext2js": "yarn tool:ts ./tools/i18n-js2text/text2js",
    "tool:cardsbk": "yarn tool:ts ./tools/cardsbk",
    "tool:resizesvg": "yarn tool:ts ./tools/resize-svg",
    "tool:reduxreducers": "yarn tool:ts ./tools/redux-reducers",
    "tool:prettier": "prettier --check '**/*.{ts,tsx}'",
    "tool:eslint": "eslint '**/*.{ts,tsx}'",
    "tool:linecount": "sloc src tools __test__",
    "preversion": "git diff-index --quiet HEAD --",
    "postversion": "git push --follow-tags"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --check",
      "eslint"
    ]
  },
  "homepage": "https://arcomage.github.io/",
  "keywords": [
    "arcomage",
    "card",
    "game",
    "might and magic",
    "3do",
    "nwc",
    "rpg",
    "minigame",
    "clone",
    "hd",
    "remake",
    "remaster",
    "react game",
    "webrtc"
  ],
  "author": "Tom Chen <tomchen.org@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/material": "^5.2.5",
    "@tailwindcss/forms": "^0.4.0",
    "classnames": "^2.3.1",
    "copy-to-clipboard": "^3.3.1",
    "howler": "^2.2.3",
    "immer": "^9.0.7",
    "peerjs": "^1.3.2",
    "pwacompat": "^2.0.17",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.2.2",
    "react-jss": "^10.9.0",
    "react-redux": "^7.2.6",
    "redux": "^4.1.2",
    "redux-observable": "^2.0.0",
    "rxjs": "^7.4.0",
    "semver": "^7.3.5",
    "tailwindcss": "^3.0.7",
    "typesafe-actions": "^5.1.0"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/enzyme": "^3.10.10",
    "@types/howler": "^2.2.4",
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-redux": "^7.1.21",
    "@types/semver": "^7.3.9",
    "@vue/preload-webpack-plugin": "^2.0.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
    "autoprefixer": "^10.4.0",
    "copy-webpack-plugin": "^10.2.0",
    "css-loader": "^6.5.1",
    "css-modules-typescript-loader": "^4.0.1",
    "cssnano": "^5.0.14",
    "enzyme": "^3.11.0",
    "fork-ts-checker-webpack-plugin": "^6.5.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-canvas-mock": "^2.3.1",
    "node-sass": "^7.0.0",
    "pinst": "^3.0.0",
    "postcss": "^8.4.5",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^6.2.1",
    "react-test-renderer": "^17.0.2",
    "redux-devtools": "^3.7.0",
    "redux-devtools-extension": "^2.13.9",
    "redux-mock-store": "^1.5.4",
    "rimraf": "^3.0.2",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "svgo-loader": "^3.0.0",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.1",
    "workbox-webpack-plugin": "^6.4.2"
  },
  "optionalDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/convert-excel-to-json": "^1.7.1",
    "@types/imagemin": "^8.0.0",
    "@types/imagemin-jpegtran": "^5.0.1",
    "@types/imagemin-optipng": "^5.2.1",
    "@types/imagemin-webp": "^5.1.2",
    "@types/sharp": "^0.29.5",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "convert-excel-to-json": "^1.7.0",
    "csv-parse": "^5.0.3",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fontmin": "^0.9.9",
    "http-server": "^14.0.0",
    "imagemin": "^8.0.1",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-webp": "^7.0.0",
    "join-images": "^1.0.0",
    "lint-staged": "^12.1.4",
    "opencc-js": "^1.0.3",
    "prettier": "^2.5.1",
    "sharp": "^0.29.3",
    "sloc": "^0.2.1",
    "tesseract.js": "^2.1.5",
    "ts-node": "^10.4.0",
    "xml-js": "^1.6.11"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not IE 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
