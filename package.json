    "@types/sharp": "^0.32.0",
    "convert-excel-to-json": "^1.7.0",
    "csv-parse": "^5.6.0",
    "doiuse": "^6.0.5",
    "eslint": "^9.20.1",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
