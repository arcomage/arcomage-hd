{
  "name": "arcomage-2021",
  "version": "1.0.0-alpha.1",
  "description": "Clone of Arcomage, mini card game inside 3DO / NWC's Might and Magic",
  "repository": {
    "type": "git",
    "url": "https://github.com/might-and-magic/arcomage-2021"
  },
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "rimraf dist && webpack --mode production",
    "test": "jest --coverage",
    "imgpc": "ts-node --project ./tools/img-processing/tsconfig.json ./tools/img-processing/crop.ts && ts-node --project ./tools/img-processing/tsconfig.json ./tools/img-processing/upscale.ts"
  },
  "keywords": [
    "arcomage",
    "card",
    "game",
    "might and magic",
    "3do",
    "nwc",
    "rpg",
    "minigame",
    "clone"
  ],
  "author": "Tom Chen <tomchen.org@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "tailwindcss": "^2.0.3"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "@types/merge-img": "^2.1.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/sharp": "^0.27.1",
    "autoprefixer": "^10.2.4",
    "classnames": "^2.2.6",
    "copy-webpack-plugin": "^8.0.0",
    "css-loader": "^5.0.2",
    "css-modules-typescript-loader": "^4.0.1",
    "cssnano": "^4.1.10",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-loader": "^2.0.0",
    "html-webpack-plugin": "^5.2.0",
    "jest": "^26.6.3",
    "merge-img": "^2.1.3",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.6",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^5.0.0",
    "prettier": "^2.2.1",
    "react-jss": "^10.5.1",
    "rimraf": "^3.0.2",
    "sass-loader": "^11.0.1",
    "sharp": "^0.27.2",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "waifu2x": "^0.7.2",
    "webpack": "^5.23.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
