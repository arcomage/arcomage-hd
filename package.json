{
  "name": "arcomage-hd",
  "version": "1.4.5",
  "description": "Web-based free and open source HD clone of 3DO and NWC's 2000 card game Arcomage",
  "repository": {
    "type": "git",
    "url": "https://github.com/arcomage/arcomage-hd.git"
  },
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "start": "webpack serve --mode development",
    "build": "rimraf dist && webpack --mode production",
    "build:local": "rimraf dist && webpack --env NODE_ENV2=local --mode production && http-server dist",
    "test": "jest --coverage",
    "tool:ts": "ts-node --project ./tools/tsconfig.json",
    "tool:zhconvert": "yarn tool:ts ./tools/zhconvert",
    "tool:imgpc": "yarn tool:ts ./tools/img-processing/crop && yarn tool:ts ./tools/img-processing/upscale",
    "tool:imgmin": "node --loader ts-node/esm ./tools/img-min/index.ts",
    "tool:datapc": "yarn tool:ts ./tools/data-processing/docards",
    "tool:taverns": "yarn tool:ts ./tools/data-processing/taverns",
    "tool:geticelist": "yarn tool:ts ./tools/geticelist",
    "tool:manifest": "yarn tool:ts ./tools/manifest",
    "tool:ocr:pre": "yarn tool:ts ./tools/ocr/crop && yarn tool:ts ./tools/ocr/composite",
    "tool:ocr": "yarn tool:ts ./tools/ocr/ocr",
    "tool:i18ncheck:card": "yarn tool:ts ./tools/i18ncheck/card",
    "tool:i18ncheck:main": "yarn tool:ts ./tools/i18ncheck/main",
    "tool:calcscore": "yarn tool:ts ./tools/ai-related/calcscore",
    "tool:cardbalance": "yarn tool:ts ./tools/card-balance",
    "tool:i18nextract": "yarn tool:ts ./tools/i18n-extraction",
    "tool:i18njs2text": "yarn tool:ts ./tools/i18n-js2text/js2text",
    "tool:i18ntext2js": "yarn tool:ts ./tools/i18n-js2text/text2js",
    "tool:cardsbk": "yarn tool:ts ./tools/cardsbk",
    "tool:resizesvg": "yarn tool:ts ./tools/resize-svg",
    "tool:reduxreducers": "yarn tool:ts ./tools/redux-reducers",
    "tool:prettier": "prettier --check '**/*.{ts,tsx}'",
    "tool:eslint": "eslint '**/*.{ts,tsx}'",
    "tool:linecount": "sloc src tools __test__",
    "preversion": "git diff-index --quiet HEAD --",
    "postversion": "git push --follow-tags"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --check",
      "eslint"
    ]
  },
  "homepage": "https://arcomage.github.io/",
  "keywords": [
    "arcomage",
    "card",
    "game",
    "might and magic",
    "3do",
    "nwc",
    "rpg",
    "minigame",
    "clone",
    "hd",
    "remake",
    "remaster",
    "react game",
    "webrtc"
  ],
  "author": "Tom Chen <tomchen.org@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^6.4.1",
    "@tailwindcss/forms": "^0.5.10",
    "classnames": "^2.5.1",
    "copy-to-clipboard": "^3.3.3",
    "howler": "^2.2.4",
    "immer": "^9.0.21",
    "peerjs": "^1.5.4",
    "pwacompat": "^2.0.17",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^2.0.5",
    "react-jss": "^10.10.0",
    "react-redux": "^7.2.9",
    "redux": "^4.2.1",
    "redux-observable": "^2.0.0",
    "rxjs": "^7.4.0",
    "semver": "^7.6.3",
    "tailwindcss": "^3.4.17",
    "typesafe-actions": "^5.1.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/enzyme": "^3.10.18",
    "@types/howler": "^2.2.12",
    "@types/jest": "^27.5.2",
    "@types/react": "^17.0.83",
    "@types/react-dom": "^17.0.26",
    "@types/react-redux": "^7.1.34",
    "@types/semver": "^7.5.8",
    "@vue/preload-webpack-plugin": "^2.0.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.8.0",
    "autoprefixer": "^10.4.20",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "css-modules-typescript-loader": "^4.0.1",
    "cssnano": "^7.0.6",
    "enzyme": "^3.11.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-canvas-mock": "^2.5.2",
    "pinst": "^3.0.0",
    "postcss": "^8.5.1",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^8.1.1",
    "postcss-rtlcss": "^5.6.0",
    "react-test-renderer": "^17.0.2",
    "redux-devtools": "^3.7.0",
    "redux-devtools-extension": "^2.13.9",
    "redux-mock-store": "^1.5.5",
    "rimraf": "^6.0.1",
    "sass": "^1.83.4",
    "sass-loader": "^16.0.4",
    "style-loader": "^4.0.0",
    "svgo-loader": "^4.0.0",
    "ts-jest": "^27.1.5",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0",
    "workbox-webpack-plugin": "^7.3.0"
  },
  "optionalDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/convert-excel-to-json": "^1.7.4",
    "@types/imagemin": "^8.0.5",
    "@types/imagemin-jpegtran": "^5.0.4",
    "@types/imagemin-optipng": "^5.2.4",
    "@types/imagemin-webp": "^7.0.3",
    "@types/sharp": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "convert-excel-to-json": "^1.7.0",
    "csv-parse": "^5.6.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "fontmin": "^2.0.0",
    "http-server": "^14.1.1",
    "imagemin": "^8.0.1",
    "imagemin-jpegtran": "^8.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-webp": "^8.0.0",
    "join-images": "^1.1.5",
    "lint-staged": "^12.5.0",
    "opencc-js": "^1.0.5",
    "prettier": "^3.4.2",
    "sharp": "^0.33.5",
    "sloc": "^0.3.2",
    "tesseract.js": "^2.1.5",
    "ts-node": "^10.9.2",
    "xml-js": "^1.6.11"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not IE 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
