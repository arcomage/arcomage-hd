{
  "name": "arcomage-hd",
  "version": "1.0.0-beta.26",
  "description": "Web-based open source HD clone of 3DO and NWC's 2000 card game Arcomage",
  "repository": {
    "type": "git",
    "url": "https://github.com/arcomage/arcomage-hd"
  },
  "scripts": {
    "postinstall": "husky install",
    "start": "webpack serve --mode development",
    "build": "rimraf dist && webpack --mode production",
    "build:local": "rimraf dist && webpack --env NODE_ENV2=local --mode production && http-server dist",
    "test": "jest --coverage",
    "imgpc": "ts-node --project ./tools/tsconfig.json ./tools/img-processing/crop.ts && ts-node --project ./tools/tsconfig.json ./tools/img-processing/upscale.ts",
    "datapc": "ts-node --project ./tools/tsconfig.json ./tools/data-processing/docards.ts",
    "zhconvert": "ts-node --project ./tools/tsconfig.json ./tools/zhconvert",
    "geticelist": "ts-node --project ./tools/tsconfig.json ./tools/geticelist",
    "manifest": "ts-node --project ./tools/tsconfig.json ./tools/manifest",
    "zhfont": "ts-node --project ./tools/tsconfig.json ./tools/font/zhfont.ts",
    "ocr:pre": "ts-node --project ./tools/tsconfig.json ./tools/ocr/crop.ts && ts-node --project ./tools/tsconfig.json ./tools/ocr/composite.ts",
    "ocr": "ts-node --project ./tools/tsconfig.json ./tools/ocr/ocr.ts",
    "cardi18ncheck": "ts-node --project ./tools/tsconfig.json ./tools/cardi18ncheck",
    "calcscore": "ts-node --project ./tools/tsconfig.json ./tools/ai-related/calcscore.ts",
    "i18nextract": "ts-node --project ./tools/tsconfig.json ./tools/i18n-extraction",
    "devsettingscheck": "ts-node --project ./tools/tsconfig.json ./tools/precommitcheck/devSettingsCheck.ts",
    "cardprobsextraction": "ts-node --project ./tools/tsconfig.json ./tools/precommitcheck/cardProbsExtraction.ts",
    "resizesvg": "ts-node --project ./tools/tsconfig.json ./tools/resize-svg",
    "linecount": "sloc src",
    "preversion": "git diff-index --quiet HEAD --",
    "postversion": "git push --follow-tags"
  },
  "keywords": [
    "arcomage",
    "card",
    "game",
    "might and magic",
    "3do",
    "nwc",
    "rpg",
    "minigame",
    "clone",
    "hd",
    "remake",
    "remaster",
    "react game"
  ],
  "author": "Tom Chen <tomchen.org@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/forms": "^0.3.2",
    "classnames": "^2.3.1",
    "copy-to-clipboard": "^3.3.1",
    "immer": "^9.0.1",
    "peerjs": "^1.3.2",
    "pwacompat": "^2.0.17",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.0.9",
    "react-jss": "^10.6.0",
    "react-redux": "^7.2.3",
    "redux": "^4.0.5",
    "redux-observable": "^1.2.0",
    "rxjs": "^6.6.7",
    "screenfull": "^5.1.0",
    "tailwindcss": "^2.1.1",
    "typesafe-actions": "^5.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-redux": "^7.1.16",
    "@vue/preload-webpack-plugin": "^2.0.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.1",
    "autoprefixer": "^10.2.5",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "^5.2.1",
    "css-modules-typescript-loader": "^4.0.1",
    "cssnano": "^5.0.0",
    "enzyme": "^3.11.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.2.1",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.10",
    "postcss-import": "^14.0.1",
    "postcss-loader": "^5.2.0",
    "redux-devtools": "^3.7.0",
    "redux-devtools-extension": "^2.13.9",
    "rimraf": "^3.0.2",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "svgo-loader": "^3.0.0",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.32.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2",
    "workbox-webpack-plugin": "^6.1.5"
  },
  "optionalDependencies": {
    "@types/convert-excel-to-json": "^1.7.0",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/merge-img": "^2.1.0",
    "@types/sharp": "^0.28.0",
    "convert-excel-to-json": "^1.7.0",
    "csv-parse": "^4.15.3",
    "eslint": "^7.24.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fontmin": "^0.9.8",
    "http-server": "^0.12.3",
    "join-images": "^0.2.5",
    "opencc-js": "^1.0.3",
    "prettier": "^2.2.1",
    "sharp": "^0.28.1",
    "sloc": "^0.2.1",
    "tesseract.js": "^2.1.4",
    "xml-js": "^1.6.11"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not IE 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
